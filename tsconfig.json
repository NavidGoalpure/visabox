{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    // "noUnusedLocals": true,
    "noUnusedParameters": true
    // "paths": {
    //   "@/PagesComponents/*": ["PagesComponents/*"],
    //   "@/pages/*": ["pages/*"],
    //   "@/styles/*": ["styles/*"]
    // }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/_document.js",
    "pages/indexold.old",
    "Hoc/withCSR.js",
    "types.d.ts",
    "Sanity/schemas/schema.js"
  ],
  "exclude": ["node_modules"],
  "types": ["cypress", "@testing-library/cypress", "@types/gtag.js"]
}
